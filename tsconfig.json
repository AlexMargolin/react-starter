{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-jsx",
    "module": "es6",
    "sourceMap": true,
    "noImplicitReturns": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}
